                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <groupId>domain-driven-design-example</groupId>
    <artifactId>ddd-core</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>

    </properties>

